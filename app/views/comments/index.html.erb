<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Stars</th>
      <th>Body</th>
      <th>Local user</th>
      <th>Match user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.stars %></td>
        <td><%= comment.body %></td>
        <td><%= comment.local_user.email %></td>
        <td><%= comment.match_user.email %></td>
        <td><%= link_to 'Show', comment %></td>
        <% if match_user_signed_in? %>
          <% if current_match_user == comment.match_user%>
          <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
          <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
